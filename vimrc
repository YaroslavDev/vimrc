" Indenting
" set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

" Line numbering
set number

" Basic syntax highlighting
syntax on
syntax enable
set background=dark
colorscheme solarized

" Show cursor position
set ruler

" Use mouse
set mouse=a

" Show command being typed
set showcmd

" Store 500 previously entered commands 
set history=500

" Completion menu for help
set wildmenu

" Highlight search terms
set hlsearch

" Highlight search terms while typing
set incsearch

" Ignore case when searching
set ignorecase
set smartcase

" When press Z+Enter leave 5 above cursor
set scrolloff=5

" Backup edited files
" set backup

" Wrap words on long line
" set linebreak

" Auto-indent
set autoindent
set smartindent
